---
interface Props {
    title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth bg-[#0a0a0a]">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <title>{title}</title>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;700;900&display=swap" rel="stylesheet">
    </head>
    <body class="text-slate-200 antialiased selection:bg-amber-500/30 selection:text-amber-200 relative">
        
        <nav class="fixed top-6 left-0 w-full z-50 flex justify-center px-4">
            <div class="flex items-center justify-between gap-2 md:gap-8 bg-black/60 backdrop-blur-xl border border-white/10 rounded-full pl-3 pr-4 py-2 shadow-2xl overflow-x-auto max-w-[98vw]">
                
                <a href="/" class="flex items-center gap-1.5 px-3 py-1.5 bg-white/5 rounded-full border border-white/5 hover:bg-amber-500/20 hover:border-amber-500/30 transition-all shrink-0 group">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" class="text-amber-500 group-hover:scale-110 transition-transform"><path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/><polyline points="9 22 9 12 15 12 15 22"/></svg>
                    <span class="font-[900] text-sm md:text-base tracking-tighter text-white">
                        B&S <span class="text-amber-500 font-light">2026</span>
                    </span>
                </a>

                <ul class="flex items-center gap-0.5 md:gap-1 text-[11px] md:text-sm font-medium text-zinc-300">
                    <li><a href="/ruta" class="px-2 py-2 hover:text-white transition-colors rounded-full hover:bg-white/5">Ruta</a></li>
                    <li><a href="/sabores" class="px-2 py-2 hover:text-white transition-colors rounded-full hover:bg-white/5">Sabores</a></li>
                    <li><a href="/cultura" class="px-2 py-2 hover:text-white transition-colors rounded-full hover:bg-white/5">Cultura</a></li>
                    <li><a href="/mapa" class="px-2 py-2 hover:text-white transition-colors rounded-full hover:bg-white/5">Mapa</a></li>
                    <li><a href="/galeria" class="px-2 py-2 hover:text-white transition-colors rounded-full hover:bg-white/5">Fotos</a></li>
                    <li><a href="/guia" class="px-2 py-2 hover:text-white transition-colors rounded-full hover:bg-white/5">Gu√≠a</a></li>
                </ul>
            </div>
        </nav>

        <div class="fixed bottom-6 left-6 z-50 flex flex-col gap-3">
            <button 
                id="music-btn" 
                class="flex items-center gap-3 bg-black/60 backdrop-blur-md border border-white/10 px-4 py-2 rounded-full hover:bg-amber-500/20 hover:border-amber-500/40 transition-all group"
            >
                <div id="icon-play" class="text-amber-500 group-hover:scale-110 transition-transform">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><polygon points="5 3 19 12 5 21 5 3"/></svg>
                </div>
                <div id="icon-pause" class="hidden text-amber-500 group-hover:scale-110 transition-transform">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><rect x="6" y="4" width="4" height="16"/><rect x="14" y="4" width="4" height="16"/></svg>
                </div>
                <span class="font-bold text-white text-sm">Bali Mood</span>
            </button>

            <audio id="bali-audio" loop>
                <source src="/baiana.mp3" type="audio/mpeg">
            </audio>

            <a href="https://borjaysusan.com" target="_blank" class="flex items-center gap-3 bg-amber-500/10 backdrop-blur-md border border-amber-500/20 px-4 py-2 rounded-full hover:bg-amber-500 hover:border-amber-400 hover:scale-105 transition-all shadow-[0_0_20px_rgba(245,158,11,0.2)] group">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-amber-500 group-hover:text-white"><path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"/></svg>
                <span class="font-bold text-white text-sm">Web Boda</span>
            </a>
        </div>

        <div class="fixed bottom-6 right-6 z-50 flex flex-col gap-3">
            <a href="https://www.instagram.com/hanzohiro/" target="_blank" class="flex items-center gap-3 bg-black/60 backdrop-blur-md border border-white/10 px-4 py-2 rounded-full hover:bg-amber-600 hover:border-amber-500 hover:scale-105 transition-all shadow-lg group">
                <span class="font-bold text-white text-sm">@HanzoHiro</span>
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-amber-500 group-hover:text-white"><rect width="20" height="20" x="2" y="2" rx="5" ry="5"/><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/><line x1="17.5" x2="17.51" y1="6.5" y2="6.5"/></svg>
            </a>
            <a href="https://www.instagram.com/susan.jtm/" target="_blank" class="flex items-center gap-3 bg-black/60 backdrop-blur-md border border-white/10 px-4 py-2 rounded-full hover:bg-amber-600 hover:border-amber-500 hover:scale-105 transition-all shadow-lg group">
                <span class="font-bold text-white text-sm">@susan.jtm</span>
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-amber-500 group-hover:text-white"><rect width="20" height="20" x="2" y="2" rx="5" ry="5"/><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/><line x1="17.5" x2="17.51" y1="6.5" y2="6.5"/></svg>
            </a>
        </div>

        <slot name="hero" />

        <main class="max-w-7xl mx-auto px-4 pt-0 -mt-16 md:-mt-32 pb-20 relative z-10">
            <slot />
        </main>

        <script>
            const musicBtn = document.getElementById('music-btn');
            const audio = document.getElementById('bali-audio') as HTMLAudioElement;
            const iconPlay = document.getElementById('icon-play');
            const iconPause = document.getElementById('icon-pause');

            if (musicBtn && audio && iconPlay && iconPause) {
                musicBtn.addEventListener('click', () => {
                    if (audio.paused) {
                        audio.play();
                        iconPlay.classList.add('hidden');
                        iconPause.classList.remove('hidden');
                        musicBtn.classList.add('bg-amber-500/20', 'border-amber-500/50');
                    } else {
                        audio.pause();
                        iconPlay.classList.remove('hidden');
                        iconPause.classList.add('hidden');
                        musicBtn.classList.remove('bg-amber-500/20', 'border-amber-500/50');
                    }
                });
            }
        </script>
    </body>
</html>

<style is:global>
    html { font-family: 'Outfit', sans-serif; }
    .firefly {
        position: absolute; width: 3px; height: 3px; background-color: #f59e0b; border-radius: 50%;
        box-shadow: 0 0 10px 3px rgba(245, 158, 11, 0.6); opacity: 0;
        animation: floatUp 10s linear infinite, twinkle 4s ease-in-out infinite;
    }
    @keyframes floatUp { 0% { transform: translateY(100vh); } 100% { transform: translateY(-10vh); } }
    @keyframes twinkle { 0%, 100% { opacity: 0; } 50% { opacity: 0.9; } }
</style>