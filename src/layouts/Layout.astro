<style is:global>
	html { font-family: 'Outfit', sans-serif; }
    
    /* ESTILOS PARTÍCULAS DORADAS */
    .firefly {
        position: absolute;
        width: 3px;
        height: 3px;
        background-color: #f59e0b; /* Amber-500 */
        border-radius: 50%;
        box-shadow: 0 0 10px 3px rgba(245, 158, 11, 0.6);
        opacity: 0;
        animation: floatUp 10s linear infinite, twinkle 4s ease-in-out infinite;
    }

    @keyframes floatUp {
        0% { transform: translateY(100vh); }
        100% { transform: translateY(-10vh); }
    }

    @keyframes twinkle {
        0%, 100% { opacity: 0; }
        50% { opacity: 0.9; }
    }

    /* Posiciones de partículas para que no se vea vacío */
    .firefly:nth-child(1) { left: 10%; animation-duration: 15s; }
    .firefly:nth-child(2) { left: 25%; animation-duration: 12s; animation-delay: 2s; }
    .firefly:nth-child(3) { left: 40%; animation-duration: 18s; animation-delay: 5s; }
    .firefly:nth-child(4) { left: 60%; animation-duration: 14s; animation-delay: 1s; }
    .firefly:nth-child(5) { left: 75%; animation-duration: 16s; animation-delay: 3s; }
    .firefly:nth-child(6) { left: 90%; animation-duration: 13s; animation-delay: 6s; }
    .firefly:nth-child(7) { left: 5%; animation-duration: 19s; animation-delay: 4s; }
    .firefly:nth-child(8) { left: 15%; animation-duration: 11s; animation-delay: 7s; }
</style>