<style is:global>
	html { font-family: 'Outfit', sans-serif; }
    .leaflet-layer, .leaflet-control-zoom-in, .leaflet-control-zoom-out, .leaflet-control-attribution {
        filter: invert(100%) hue-rotate(180deg) brightness(95%) contrast(90%);
    }

    /* ESTILOS PARTÍCULAS DORADAS (FIREFLIES) */
    .firefly {
        position: absolute;
        width: 3px;
        height: 3px;
        background-color: #fbbf24; /* Amber-400 (Dorado) */
        border-radius: 50%;
        box-shadow: 0 0 10px 2px rgba(251, 191, 36, 0.4); /* Glow Dorado */
        opacity: 0;
        animation: floatUp 10s linear infinite, twinkle 4s ease-in-out infinite;
    }

    @keyframes floatUp {
        0% { transform: translateY(100vh); }
        100% { transform: translateY(-10vh); }
    }

    @keyframes twinkle {
        0%, 100% { opacity: 0; }
        50% { opacity: 0.8; }
    }

    /* Posiciones aleatorias */
    .firefly:nth-child(1) { left: 10%; animation-duration: 15s; animation-delay: 0s; width: 4px; height: 4px; }
    .firefly:nth-child(2) { left: 20%; animation-duration: 12s; animation-delay: 2s; }
    .firefly:nth-child(3) { left: 35%; animation-duration: 18s; animation-delay: 5s; width: 2px; height: 2px; }
    .firefly:nth-child(4) { left: 50%; animation-duration: 14s; animation-delay: 1s; }
    .firefly:nth-child(5) { left: 65%; animation-duration: 16s; animation-delay: 3s; width: 4px; height: 4px; }
    .firefly:nth-child(6) { left: 80%; animation-duration: 13s; animation-delay: 6s; }
    .firefly:nth-child(7) { left: 90%; animation-duration: 19s; animation-delay: 4s; }
    .firefly:nth-child(8) { left: 5%; animation-duration: 11s; animation-delay: 7s; }
    .firefly:nth-child(9) { left: 15%; animation-duration: 17s; animation-delay: 1.5s; width: 2px; height: 2px; }
    .firefly:nth-child(10) { left: 25%; animation-duration: 14s; animation-delay: 4.5s; }
    .firefly:nth-child(11) { left: 45%; animation-duration: 20s; animation-delay: 0.5s; }
    .firefly:nth-child(12) { left: 55%; animation-duration: 12s; animation-delay: 2.5s; }
    .firefly:nth-child(13) { left: 70%; animation-duration: 15s; animation-delay: 5.5s; }
    .firefly:nth-child(14) { left: 85%; animation-duration: 18s; animation-delay: 1s; }
    .firefly:nth-child(15) { left: 95%; animation-duration: 16s; animation-delay: 3.5s; }
    .firefly:nth-child(16) { left: 30%; animation-duration: 22s; animation-delay: 2s; }
    .firefly:nth-child(17) { left: 60%; animation-duration: 13s; animation-delay: 4s; }
    .firefly:nth-child(18) { left: 40%; animation-duration: 16s; animation-delay: 6s; }
    .firefly:nth-child(19) { left: 75%; animation-duration: 14s; animation-delay: 1s; }
    .firefly:nth-child(20) { left: 10%; animation-duration: 19s; animation-delay: 5s; }
</style>