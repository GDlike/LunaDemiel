---
// Componente para compartir en redes sociales
interface Props {
  title?: string;
  description?: string;
  url?: string;
}

const { 
  title = "Borja & Susan | Luna de Miel Indonesia 2026",
  description = "Guía y ruta de nuestra luna de miel por Indonesia: Bali, Ubud, Uluwatu, Seminyak, Gili y Lombok.",
  url
} = Astro.props;

// Usar la URL proporcionada o construirla desde Astro.url
const baseUrl = Astro.site || new URL(Astro.url.pathname, Astro.url.origin).origin;
const shareUrl = url || new URL(Astro.url.pathname, baseUrl).toString();
const encodedTitle = encodeURIComponent(title);
const encodedDescription = encodeURIComponent(description);
const encodedUrl = encodeURIComponent(shareUrl);

const whatsappUrl = `https://wa.me/?text=${encodedTitle}%20${encodedUrl}`;
const twitterUrl = `https://twitter.com/intent/tweet?text=${encodedTitle}&url=${encodedUrl}`;
const facebookUrl = `https://www.facebook.com/sharer/sharer.php?u=${encodedUrl}`;
const telegramUrl = `https://t.me/share/url?url=${encodedUrl}&text=${encodedTitle}`;
---

<div class="flex flex-wrap items-center gap-3 justify-center">
  <span class="text-zinc-400 text-xs font-bold uppercase tracking-wider">Compartir:</span>
  
  <a
    href={whatsappUrl}
    target="_blank"
    rel="noopener noreferrer"
    aria-label="Compartir en WhatsApp"
    class="
      flex items-center gap-2
      bg-emerald-600/20 hover:bg-emerald-600/30
      border border-emerald-500/30 hover:border-emerald-500/50
      px-4 py-2 rounded-full
      transition-all duration-300
      hover:scale-105
      focus:outline-none focus-visible:ring-2 focus-visible:ring-emerald-500/60
      group
    "
  >
    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor" class="text-emerald-400 group-hover:text-emerald-300">
      <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
    </svg>
    <span class="text-white text-xs font-bold">WhatsApp</span>
  </a>

  <a
    href={twitterUrl}
    target="_blank"
    rel="noopener noreferrer"
    aria-label="Compartir en Twitter"
    class="
      flex items-center gap-2
      bg-blue-600/20 hover:bg-blue-600/30
      border border-blue-500/30 hover:border-blue-500/50
      px-4 py-2 rounded-full
      transition-all duration-300
      hover:scale-105
      focus:outline-none focus-visible:ring-2 focus-visible:ring-blue-500/60
      group
    "
  >
    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor" class="text-blue-400 group-hover:text-blue-300">
      <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
    </svg>
    <span class="text-white text-xs font-bold">Twitter</span>
  </a>

  <button
    type="button"
    id="copy-link-btn"
    data-url={shareUrl}
    aria-label="Copiar enlace"
    class="
      flex items-center gap-2
      bg-zinc-700/20 hover:bg-zinc-700/30
      border border-zinc-500/30 hover:border-zinc-500/50
      px-4 py-2 rounded-full
      transition-all duration-300
      hover:scale-105
      focus:outline-none focus-visible:ring-2 focus-visible:ring-amber-500/60
      group
    "
  >
    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-zinc-400 group-hover:text-amber-400">
      <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
      <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
    </svg>
    <span class="text-white text-xs font-bold">Copiar</span>
  </button>

  <script>
    function setupCopyButton() {
      const btn = document.getElementById('copy-link-btn');
      if (!btn) return;
      
      btn.addEventListener('click', async () => {
        const url = btn.dataset.url || window.location.href;
        try {
          await navigator.clipboard.writeText(url);
          const originalText = btn.querySelector('span')?.textContent || 'Copiar';
          btn.querySelector('span').textContent = '¡Copiado!';
          setTimeout(() => {
            if (btn.querySelector('span')) {
              btn.querySelector('span').textContent = originalText;
            }
          }, 2000);
        } catch (e) {
          // Fallback para navegadores antiguos
          const textarea = document.createElement('textarea');
          textarea.value = url;
          textarea.style.position = 'fixed';
          textarea.style.opacity = '0';
          document.body.appendChild(textarea);
          textarea.select();
          try {
            document.execCommand('copy');
            btn.querySelector('span').textContent = '¡Copiado!';
            setTimeout(() => {
              if (btn.querySelector('span')) {
                btn.querySelector('span').textContent = 'Copiar';
              }
            }, 2000);
          } catch (err) {
            alert('No se pudo copiar el enlace');
          }
          document.body.removeChild(textarea);
        }
      });
    }

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', setupCopyButton);
    } else {
      setupCopyButton();
    }
    document.addEventListener('astro:page-load', setupCopyButton);
  </script>
</div>
