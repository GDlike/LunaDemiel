---
interface Props {
    title: string;
    text: string;
}
const { title, text } = Astro.props;
---

<div class="bg-zinc-900/50 backdrop-blur-md border border-white/10 p-4 md:p-6 rounded-2xl flex items-start gap-4 hover:bg-white/5 transition-colors duration-300">
    <div class="shrink-0 p-3 bg-amber-500/10 text-amber-400 rounded-xl">
        <slot name="icon" />
    </div>
    
    <div>
        <h3 class="text-white font-bold mb-1">{title}</h3>
        <p class="text-zinc-400 text-sm leading-relaxed">{text}</p>
    </div>
</div>