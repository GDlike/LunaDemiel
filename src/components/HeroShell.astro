---
const {
  image = "/portada.webp",
  alt = "Portada",
  logoSrc = "/logo.png",
  logoAlt = "Logo Borja & Susan",
  variant = "default", // "default" | "index"
} = Astro.props;
---

<header
  class="
    relative w-full
    min-h-[90vh]
    overflow-hidden
    landscape:min-h-[520px]
    landscape:overflow-hidden
  "
>
  <!-- FONDO -->
  <div class="absolute inset-0 z-0 pointer-events-none bg-black">
    <img
      src={image}
      alt={alt}
      class="w-full h-full object-cover blur-[1px] opacity-80"
      style="object-position: 12% 60%;"
    />

    <!-- overlays -->
    <div class="absolute inset-0 bg-gradient-to-b from-black/30 via-black/60 to-[#0a0a0a]"></div>
    <div class="absolute bottom-0 left-0 w-full h-64 bg-gradient-to-t from-[#0a0a0a] to-transparent"></div>

    <!-- FX -->
    <div class="absolute inset-0">
      <slot name="fx" />
    </div>
  </div>

  <!-- CONTENIDO -->
  <div class="relative z-10 flex flex-col items-center justify-center h-full text-center px-4">
    <!-- LOGO -->
    <img
      src={logoSrc}
      alt={logoAlt}
      class="
        w-full
        max-w-[200px]
        md:max-w-[300px]
        lg:max-w-[380px]
        xl:max-w-[450px]
        max-md:landscape:max-w-[150px]
        drop-shadow-2xl
        rounded-2xl
        mb-6
        mt-28
        landscape:mt-16
      "
    />

    <!-- CONTENIDO HERO -->
    <div
      class={`w-full ${
        variant === "index"
          ? "mt-6 landscape:mt-2"
          : "mt-10 landscape:mt-4"
      }`}
    >
      <div class="max-w-4xl mx-auto flex flex-col items-center">
        <slot />
      </div>
    </div>
  </div>
</header>
