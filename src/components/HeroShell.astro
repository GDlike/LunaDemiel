---
const {
  image = "/portada.webp",
  alt = "Portada",
  logoSrc = "/logo.png",
  logoAlt = "Logo Borja & Susan",
  variant = "default", // "default" | "index"
} = Astro.props;
---

<header class="relative w-full h-[90vh] overflow-hidden">
  <!-- Fondo FULL BLEED -->
  <div class="absolute inset-0 z-0 select-none pointer-events-none">
    <div class="absolute inset-0 left-1/2 w-screen -translate-x-1/2 bg-[#0a0a0a]">
      <!-- DESKTOP: cover normal -->
      <img
        src={image}
        alt={alt}
        class="hidden md:block w-full h-full object-cover object-center blur-[1px] opacity-80 md:scale-105"
      />

      <!-- MÓVIL: 2 capas (cover borroso + contain nítido) -->
      <img
        src={image}
        alt=""
        aria-hidden="true"
        class="md:hidden absolute inset-0 w-full h-full object-cover object-[50%_70%] blur-[5px] opacity-70 scale-110"
      />
      <img
        src={image}
        alt={alt}
        class="md:hidden w-full h-full object-contain object-center opacity-90"
      />

      <!-- overlays -->
      <div class="absolute inset-0 bg-gradient-to-b from-black/20 via-black/60 to-[#0a0a0a]"></div>
      <div class="absolute bottom-0 left-0 w-full h-64 bg-gradient-to-t from-[#0a0a0a] via-[#0a0a0a] to-transparent"></div>

      <!-- FX opcionales -->
      <div class="absolute inset-0">
        <slot name="fx" />
      </div>
    </div>
  </div>

  <!-- Contenido -->
  <div class="relative z-10 w-full h-full flex flex-col">
    <div class="flex-1 flex flex-col items-center justify-center px-4 pt-24 md:pt-24">
      <!-- Logo -->
      <img
        src={logoSrc}
        alt={logoAlt}
        class="w-full max-w-[200px] md:max-w-[300px] drop-shadow-2xl rounded-2xl"
      />

      <!-- Contenido del hero -->
      <div class={`w-full ${variant === "index" ? "mt-6 md:mt-8" : "mt-8 md:mt-10"}`}>
        <div class="max-w-4xl mx-auto flex flex-col items-center text-center">
          <slot />
        </div>
      </div>
    </div>
  </div>
</header>