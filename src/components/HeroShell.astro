---
const {
  image = "/portada.webp",
  alt = "Portada",
  logoSrc = "/logo.png",
  logoAlt = "Logo Borja & Susan",
  variant = "default", // "default" | "index"
} = Astro.props;
---

<header class="relative w-full h-[90vh] overflow-hidden">
  <!-- FONDO FULL BLEED -->
  <div class="absolute inset-0 z-0 pointer-events-none">
    <div class="absolute inset-0 left-1/2 w-screen -translate-x-1/2 bg-black">
      <img
        src={image}
        alt={alt}
        class="w-full h-full object-cover md:scale-105 blur-[1px] opacity-80"
        style="object-position: 12% 65%;"
      />

      <!-- overlays -->
      <div class="absolute inset-0 bg-gradient-to-b from-black/30 via-black/60 to-[#0a0a0a]"></div>
      <div class="absolute bottom-0 left-0 w-full h-64 bg-gradient-to-t from-[#0a0a0a] to-transparent"></div>

      <!-- FX -->
      <div class="absolute inset-0">
        <slot name="fx" />
      </div>
    </div>
  </div>

  <!-- CONTENIDO -->
  <div class="relative z-10 flex flex-col items-center h-full text-center">
    <!-- LOGO -->
    <div class="w-full max-w-4xl mx-auto px-4 pt-28 landscape:pt-16 md:pt-24 flex justify-center">
      <img
        src={logoSrc}
        alt={logoAlt}
        class="w-full max-w-[200px] md:max-w-[300px] drop-shadow-2xl rounded-2xl"
      />
    </div>

    <!-- CONTENIDO HERO -->
    <div class={`px-4 w-full ${variant === "index" ? "pt-10 md:pt-12" : "pt-12 md:pt-16"}`}>
      <div class="max-w-4xl mx-auto flex flex-col items-center">
        <slot />
      </div>
    </div>
  </div>
</header>
